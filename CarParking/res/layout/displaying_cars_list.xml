<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/layout_props">
    <LinearLayout style="@style/horizontalLayout">
        <Button style="@style/button"
                android:text="@string/start_parking_button"
                android:onClick="startParking"></Button>
        <Button style="@style/button"
                android:text="@string/stop_parking_button"
                android:onClick="stopParking"></Button>
        <Button style="@style/button"
                android:text="@string/update_parking_button"
                android:onClick="updateParking"></Button>
    </LinearLayout>
    <ListView android:id="@+id/carsListView"
              style="@style/horizontalLayout">
    </ListView>
</LinearLayout>