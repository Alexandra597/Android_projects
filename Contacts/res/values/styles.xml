<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editText.nameInput">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="editText.phoneInput">
        <item name="android:inputType">number</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_props">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="textView.name">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#5C3E2D</item>
    </style>

    <style name="textView.phone">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#E7A11D</item>
    </style>

    <style name="horizontalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>